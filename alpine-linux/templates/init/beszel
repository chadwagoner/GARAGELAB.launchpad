#!/sbin/openrc-run

name="beszel"
description="container - beszel"

restart_command="/usr/bin/docker compose -f /opt/core-services/beszel/compose.yaml restart"
start_command="/usr/bin/docker compose -f /opt/core-services/beszel/compose.yaml up -d"
stop_command="/usr/bin/docker compose -f /opt/core-services/beszel/compose.yaml down"
stop_command_args="--rmi all --volumes"

depend() {
        need container_id
        use docker tailscale
}

start_pre() {
        sleep 30
}

start() {
        ebegin "STARTING - $name"
        ${start_command}
        eend $?
}

stop() {
        ebegin "STOPPING - $name"
        ${stop_command} ${stop_command_args}
        eend $?
}

restart() {
        ebegin "RESTARTING - $name"
        ${restart_command}
        eend $?
}
